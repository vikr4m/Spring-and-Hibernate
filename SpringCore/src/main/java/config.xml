<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org//schema/context/spring-context.xsd">
	
	<!-- This is our bean -->
	<!-- One way is value as an element -->
	<bean class="com.springcore.Student" name="student1">
		<property name="studentId">
			<value>1</value>
		</property>
		
		<property name="studentName">
			<value>Vikram</value>
		</property>
		
		<!-- another way is by using value as an attribute in property (below) -->
		<property name="studentAddress" value="Anand"/>
	</bean>
	
	<bean class="com.springcore.Student" name="student2">
		<property name="studentId" value="2"/>
		
		<property name="studentName" value="Mukul"/>
		
		<property name="studentAddress" value="Ahmedabad"/>
	</bean>
	
		<!-- Another way is property injection using p schema  -->
		<bean class="com.springcore.Student" name="student3" p:studentId="3" p:studentName="Shivam" p:studentAddress="Ahemdabad"/>
		
		<!-- All three ways gives the same output -->
	
</beans>